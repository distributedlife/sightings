<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:id="@+id/animalFrame"
                android:longClickable="true"
                android:background="@color/backgroundAnimalNotSighted">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageIcon"
        android:src="@drawable/ic_launcher"
        android:cropToPadding="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/animalListImageContentDescription"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/label"
        android:text="@string/dummyAnimalCommonName"
        android:textStyle="normal"
        android:textIsSelectable="false"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageIcon"
        android:singleLine="false"
        android:ellipsize="none"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        android:textColor="@android:color/primary_text_light"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dummyOfficialName"
        android:id="@+id/officialName"
        android:textStyle="italic"
        android:layout_below="@+id/label"
        android:layout_alignLeft="@+id/label"
        android:textColor="@android:color/secondary_text_light"
        android:textSize="12sp"
        android:layout_marginBottom="8dp"/>

    <ImageButton
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:id="@+id/removeSighting"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:focusableInTouchMode="false"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_action_cancel"
        android:layout_margin="4dp"
        android:cropToPadding="false"
        android:contentDescription="Remove sighting"/>

</RelativeLayout>